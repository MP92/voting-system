<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="userRepository" class="org.mockito.Mockito" factory-method="mock">
        <constructor-arg value="ru.pkg.repository.UserRepository" />
    </bean>

    <bean id="restaurantRepository" class="org.mockito.Mockito" factory-method="mock">
        <constructor-arg value="ru.pkg.repository.RestaurantRepository" />
    </bean>

    <bean id="dishRepository" class="org.mockito.Mockito" factory-method="mock">
        <constructor-arg value="ru.pkg.repository.DishRepository" />
    </bean>
</beans>